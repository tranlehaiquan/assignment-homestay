{
  "kind": "collectionType",
  "collectionName": "rooms",
  "info": {
    "name": "Room"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "isSpecial": {
      "type": "boolean",
      "default": false
    },
    "preview": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "collection": "category",
      "via": "rooms"
    },
    "size": {
      "type": "integer"
    },
    "guests": {
      "type": "integer",
      "default": 1
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "bed": {
      "type": "integer",
      "default": 1
    },
    "roomType": {
      "type": "enumeration",
      "enum": [
        "king",
        "queen",
        "Standart"
      ],
      "default": "Standart"
    },
    "hasAC": {
      "type": "boolean",
      "default": true
    },
    "hasCableTv": {
      "type": "boolean",
      "default": true
    },
    "hasFreeWifi": {
      "type": "boolean",
      "default": true
    },
    "hasDailyCleaning": {
      "type": "boolean",
      "default": true
    },
    "hasShower": {
      "type": "boolean",
      "default": true
    },
    "hasFridge": {
      "type": "boolean",
      "default": true
    }
  }
}
