{
  "kind": "collectionType",
  "collectionName": "rooms",
  "info": {
    "name": "Room"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "isSpecial": {
      "type": "boolean",
      "default": false
    },
    "preview": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "collection": "category",
      "via": "rooms"
    }
  }
}
